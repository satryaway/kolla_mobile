<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_collapseMode="parallax">

        <ImageView
            android:id="@+id/profile_image_iv"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:src="@drawable/dummy_bg" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            tools:text="Satria Jix" />

        <TextView
            android:id="@+id/job_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/medium_text"
            tools:text="Project Manager" />


        <TextView
            android:id="@+id/company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/medium_text"
            tools:text="Jixstreet, inc" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/primary">

            <TextView
                android:id="@+id/view_profile_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/view_profile"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/large_text" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/primary_border_white_layout">

            <TextView
                android:id="@+id/follow_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/follow"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="@dimen/large_text" />
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <com.jixstreet.kolla.view.SquareImageView
        android:id="@+id/category_image_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_bg" />

    <TextView
        android:id="@+id/category_label_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/category_image_iv"
        android:background="@color/transparent_navy_blue_90"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/hot_desk"
        android:textColor="@android:color/white"
        android:textSize="@dimen/medium_text" />

</RelativeLayout>
